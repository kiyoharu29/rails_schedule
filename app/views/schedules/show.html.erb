<h2>スケジュール詳細</h2>
<table>
  <tr>
    <th>タイトル</th>
    <td><%= @schedule.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @schedule.start_day %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @schedule.end_day %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><%= @schedule.all_day %></td>
  </tr>
  <tr>
    <th>スケジュール更新</th>
    <td><%= @schedule.updated_at %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
  </ul>
</div>